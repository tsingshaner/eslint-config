{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":URL:", ":BUN:", ":NODE:"],
              [":PACKAGE_WITH_PROTOCOL:", ":PACKAGE:"],
              ":BLANK_LINE:",
              [":ALIAS:"],
              ":BLANK_LINE:",
              [":PATH:"]
            ]
          }
        },
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["*.svelte", "*.astro", "*.vue"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          }
        }
      }
    },
    {
      "includes": ["*.vue"],
      "linter": {
        "rules": {
          "correctness": {
            "useHookAtTopLevel": "off",
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    },
    {
      "includes": ["*.d.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    }
  ],
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "useEditorconfig": true,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "none"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "none",
      "lineWidth": 100
    },
    "parser": {
      "allowComments": true
    },
    "linter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "recommended": true,
        "useAriaPropsSupportedByRole": "error"
      },
      "complexity": {
        "recommended": true,
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 15
          }
        },
        "noUselessStringConcat": "warn",
        "useSimplifiedLogicExpression": "warn"
      },
      "correctness": {
        "noConstantMathMinMaxClamp": "error",
        "noSwitchDeclarations": "error",
        "noUndeclaredDependencies": "error",
        "noUnusedImports": {
          "level": "warn",
          "fix": "unsafe"
        },
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "warn",
        "noUnusedLabels": "error",
        "noUnusedFunctionParameters": "info",
        "useHookAtTopLevel": "error"
      },
      "nursery": {
        "useSortedClasses": "error"
      },
      "recommended": true,
      "style": {
        "recommended": true,
        "noYodaExpression": "info",
        "useAtIndex": "info",
        "useBlockStatements": "warn",
        "useCollapsedIf": "warn",
        "useComponentExportOnlyModules": {
          "level": "error",
          "options": {
            "allowConstantExport": true
          }
        },
        "useConsistentArrayType": "warn",
        "useExplicitLengthCheck": "info",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "requireAscii": true,
            "filenameCases": ["export", "kebab-case", "PascalCase"]
          }
        },
        "useForOf": "info",
        "useFragmentSyntax": "error",
        "useImportType": "error",
        "useNamingConvention": {
          "level": "info",
          "fix": "unsafe",
          "options": {
            "conventions": [
              {
                "selector": {
                  "kind": "const"
                },
                "formats": ["camelCase", "CONSTANT_CASE", "PascalCase"]
              },
              {
                "selector": {
                  "kind": "enumMember"
                },
                "formats": ["PascalCase"]
              }
            ],
            "strictCase": false,
            "requireAscii": true
          }
        },
        "useNodeAssertStrict": "info",
        "useShorthandAssign": "info",
        "useThrowOnlyError": "warn"
      },
      "suspicious": {
        "recommended": true,
        "noConsole": "warn",
        "noMisplacedAssertion": "warn",
        "useAwait": "info",
        "useErrorMessage": "warn"
      }
    }
  },
  "css": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowWrongLineComments": true,
      "cssModules": false
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
