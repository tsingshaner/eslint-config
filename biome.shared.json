{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "overrides": [
    {
      "include": ["*.svelte", "*.astro", "*.vue"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          }
        }
      }
    },
    {
      "include": ["*.vue"],
      "linter": {
        "rules": {
          "correctness": {
            "useHookAtTopLevel": "off",
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ],
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "useEditorconfig": true,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "none"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "none",
      "lineWidth": 100
    },
    "parser": { "allowComments": true },
    "linter": { "enabled": true }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": { "recommended": true },
      "complexity": {
        "recommended": true,
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 15
          }
        },
        "noUselessStringConcat": "warn",
        "useSimplifiedLogicExpression": "warn"
      },
      "correctness": {
        "noConstantMathMinMaxClamp": "error",
        "noInvalidNewBuiltin": "error",
        "noUndeclaredDependencies": "error",
        "noUnusedImports": {
          "level": "warn",
          "fix": "unsafe"
        },
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "warn",
        "noUnusedLabels": "error",
        "noUnusedFunctionParameters": "info",
        "useHookAtTopLevel": "error"
      },
      "nursery": {
        "useAtIndex": "info",
        "useSortedClasses": "error",
        "useAriaPropsSupportedByRole": "error",
        "useComponentExportOnlyModules": {
          "level": "error",
          "options": {
            "allowConstantExport": true
          }
        },
        "useCollapsedIf": "warn"
      },
      "recommended": true,
      "style": {
        "recommended": true,
        "noYodaExpression": "info",
        "useBlockStatements": "warn",
        "useConsistentArrayType": "warn",
        "useExplicitLengthCheck": "info",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "requireAscii": true,
            "filenameCases": ["export", "kebab-case", "PascalCase"]
          }
        },
        "useForOf": "info",
        "useFragmentSyntax": "error",
        "useImportType": "error",
        "useNamingConvention": {
          "level": "info",
          "fix": "unsafe",
          "options": {
            "conventions": [
              {
                "selector": { "kind": "const" },
                "formats": ["camelCase", "CONSTANT_CASE", "PascalCase"]
              }
            ],
            "strictCase": false,
            "enumMemberCase": "PascalCase",
            "requireAscii": true
          }
        },
        "useNodeAssertStrict": "info",
        "useShorthandArrayType": "info",
        "useShorthandAssign": "info",
        "useSingleCaseStatement": "error",
        "useThrowOnlyError": "warn"
      },
      "suspicious": {
        "recommended": true,
        "noConsoleLog": "warn",
        "noMisplacedAssertion": "warn",
        "useAwait": "info",
        "useErrorMessage": "warn"
      }
    }
  },
  "css": {
    "assists": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowWrongLineComments": true,
      "cssModules": false
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
