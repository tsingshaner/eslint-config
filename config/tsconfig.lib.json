{
  "include": ["../src", "../test"],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "..",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "target": "es2023",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "types": [],
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
