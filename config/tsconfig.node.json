{
  "include": ["../scripts/**/*.ts", "../src", "../test"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "rootDir": "..",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "composite": true,
    "module": "esnext",
  }
}
