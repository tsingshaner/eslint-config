{
  "name": "@qingshaner/eslint-config",
  "type": "module",
  "version": "0.11.0",
  "packageManager": "pnpm@10.5.0",
  "description": "ESLint configs for qingshaner",
  "author": {
    "name": "qingshaner",
    "url": "https://github.com/Jon-a-than"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsingshaner/eslint-config"
  },
  "bugs": {
    "url": "https://github.com/tsingshaner/eslint-config"
  },
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./biome": "./biome.shared.json",
    "./cspell": "./cspell.yaml"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "biome.shared.json",
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "vite build",
    "changeset-version": "changeset version && node ./scripts/update-jsr-version.js",
    "changeset-publish": "changeset publish",
    "format": "biome format . --write",
    "gen": "pnpm gen:biome && pnpm gen:types",
    "gen:biome": "tsx ./scripts/ban-biome-impl-rules.ts",
    "gen:types": "tsx ./scripts/gen-rule-record-type.ts",
    "inspector": "pnpx @eslint/config-inspector",
    "lint": "biome lint . --write && eslint . --fix",
    "prepare": "simple-git-hooks",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:dev": "vitest"
  },
  "peerDependencies": {
    "@biomejs/biome": ">=1.9.0",
    "eslint": ">=9.10",
    "react": ">=19.0.0",
    "typescript": ">=5.7.0",
    "unocss": ">=66.0.0",
    "vue": ">=3.5.0"
  },
  "peerDependenciesMeta": {
    "@biomejs/biome": {
      "optional": true
    },
    "eslint": {
      "optional": false
    },
    "react": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "unocss": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@cspell/eslint-plugin": "^8.17.5",
    "@eslint/js": "^9.21.0",
    "@unocss/eslint-plugin": "^66.0.0",
    "eslint-merge-processors": "^2.0.0",
    "eslint-plugin-jsonc": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.9.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-vue": "^9.32.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "eslint-processor-vue-blocks": "^2.0.0",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.25.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/compat": "^1.2.7",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@vitest/coverage-v8": "^3.0.7",
    "eslint": "^9.21.0",
    "eslint-typegen": "^2.0.0",
    "jiti": "^2.4.2",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.19.3",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.1",
    "vitest": "^3.0.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm test"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "pnpm lint",
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts}": "pnpm biome format --write"
  }
}
