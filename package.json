{
  "name": "@qingshaner/eslint-config",
  "type": "module",
  "version": "0.2.0",
  "description": "a lib template for typescript",
  "author": {
    "name": "qingshaner",
    "url": "https://github.com/Jon-a-than"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "biome.json",
    "dist"
  ],
  "engines": {
    "node": ">=22.8.0",
    "pnpm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "pnpm tsup --config=config/tsup.config.ts",
    "changeset-version": "changeset version",
    "changeset-publish": "pnpm gen && pnpm build && changeset publish",
    "format": "biome format . --write",
    "gen": "pnpm gen:biome && pnpm gen:types",
    "gen:biome": "tsx ./scripts/ban-biome-impl-rules.ts",
    "gen:types": "tsx ./scripts/gen-rule-record-type.ts",
    "inspector": "pnpx @eslint/config-inspector",
    "lint": "biome lint . --write && eslint --flag unstable_ts_config . --fix",
    "prepare": "simple-git-hooks",
    "test": "vitest run -c config/vitest.config.ts",
    "test:cov": "vitest run --coverage -c config/vitest.config.ts",
    "test:dev": "vitest -c config/vitest.config.ts"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^8.6.0",
    "eslint-merge-processors": "^0.1.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-perfectionist": "^3.6.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.28.0",
    "eslint-processor-vue-blocks": "^0.1.2",
    "globals": "^15.9.0",
    "typescript-eslint": "^8.6.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@changesets/cli": "^2.27.8",
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.10.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.5.5",
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^9.10.0",
    "eslint-typegen": "^0.3.2",
    "jiti": "^1.21.6",
    "lint-staged": "^15.2.10",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "vue": "^3.5.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm test"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "pnpm lint"
    ],
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts}": "pnpm biome format --write"
  }
}
