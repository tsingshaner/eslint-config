{
  "name": "@qingshaner/eslint-config",
  "type": "module",
  "version": "0.9.0",
  "description": "ESLint configs for qingshaner",
  "author": {
    "name": "qingshaner",
    "url": "https://github.com/Jon-a-than"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsingshaner/eslint-config"
  },
  "bugs": {
    "url": "https://github.com/tsingshaner/eslint-config"
  },
  "keywords": ["eslint", "eslint-config"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./biome": "./biome.shared.json"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["biome.shared.json", "dist"],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "vite build",
    "changeset-version": "changeset version && node ./scripts/update-jsr-version.js",
    "changeset-publish": "changeset publish",
    "format": "biome format . --write",
    "gen": "pnpm gen:biome && pnpm gen:types",
    "gen:biome": "tsx ./scripts/ban-biome-impl-rules.ts",
    "gen:types": "tsx ./scripts/gen-rule-record-type.ts",
    "inspector": "pnpx @eslint/config-inspector",
    "lint": "biome lint . --write && eslint --flag unstable_ts_config . --fix",
    "prepare": "simple-git-hooks",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:dev": "vitest"
  },
  "peerDependencies": {
    "@biomejs/biome": ">=1.9.0",
    "eslint": ">=9.10",
    "react": ">=19.0.0",
    "typescript": ">=5.7.0",
    "unocss": ">=65.0.0",
    "vue": ">=3.5.0"
  },
  "peerDependenciesMeta": {
    "@biomejs/biome": {
      "optional": true
    },
    "eslint": {
      "optional": false
    },
    "react": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "unocss": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint/js": "^9.18.0",
    "@unocss/eslint-plugin": "^65.4.0",
    "eslint-merge-processors": "^0.1.0",
    "eslint-plugin-jsonc": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.6.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-vue": "^9.32.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "eslint-processor-vue-blocks": "^0.1.2",
    "globals": "^15.14.0",
    "typescript-eslint": "^8.19.1",
    "vue-eslint-parser": "^9.4.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@eslint/compat": "^1.2.5",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint-typegen": "^0.3.2",
    "jiti": "^2.4.2",
    "lint-staged": "^15.3.0",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.19.2",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm test"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "pnpm lint",
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts}": "pnpm biome format --write"
  }
}
